<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningEnglish.ControlPage"
             Title="Контроль">
    <ContentPage.Content>

        <StackLayout>
            <Label Text="Выберите уровень:"></Label>
            <Picker x:Name="levelNames"  Title="Уровень" SelectedIndexChanged="LevelSelectedIndexChanged">
            </Picker>
            <ListView x:Name="topicsList" ItemSelected="TopicsItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" Detail="{Binding TopicId}"></TextCell>
                        <!--<ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Name}" />
                                <CheckBox 
                                    IsChecked="False" 
                                    CheckedChanged="OnCheckedChanged" 
                                    HorizontalOptions="EndAndExpand"/>
                            </StackLayout>
                        </ViewCell>-->
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>